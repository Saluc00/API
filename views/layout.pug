
doctype html
html
  head
    title API Speed Run | #{title}
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous")
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    .container
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            a.navbar-brand(href='/') Speed Run
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
            #navbarNav.collapse.navbar-collapse
                ul.navbar-nav
                    if title == "Users" 
                        li.nav-item.active
                            a.nav-link(href='/users') Users
                    else 
                        li.nav-item
                            a.nav-link(href='/users') Users
                    if title == "Games" 
                        li.nav-item.active
                            a.nav-link(href='/games') Games
                    else
                        li.nav-item
                            a.nav-link(href='/games') Games
                    if title == "Runs" 
                        li.nav-item.active
                            a.nav-link(href='/runs') Runs
                    else
                        li.nav-item
                            a.nav-link(href='/runs') Runs

        block content
    
footer.page-footer.font-small.pt-4
    .container
        hr
        ul.list-unstyled.list-inline.text-center.py-2
            li.list-inline-item
                h5.mb-1 Powered by William GILLOT and Lucas USEREAU
        .footer-copyright.text-center.py-3
            | &copy; 2020 Copyright
